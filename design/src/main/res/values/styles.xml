<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Pidget.AppTheme.DarkActionbar" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/colorTextSecondary</item>
    </style>

    <style name="Pidget.AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Pidget.BrandedLaunch" parent="Pidget.AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/branded_logo</item>
    </style>

    <style name="Pidget.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Pidget.BrandedLaunch.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Pidget.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Pidget.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextViewMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextViewSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextViewVerySmallWithoutMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_very_small</item>
    </style>

    <style name="ButtonNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:background">@drawable/bg_btn_accent</item>
    </style>

    <style name="EditTextMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textDirection">ltr</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColorHint">@color/colorTextSecondary</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonMediumNoMarginPrimaryDark">
        <item name="replaceWithPersianDigits">true</item>
        <item name="fontAdapterType">regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:drawablePadding">@dimen/padding_medium</item>
        <item name="android:background">@drawable/bg_btn_primarydark</item>
    </style>

    <style name="ButtonMediumNoMarginAccent" parent="ButtonMediumNoMarginPrimaryDark">
        <item name="android:background">@drawable/bg_btn_accent</item>
    </style>

    <style name="TextViewMediumNoMarginWhite">
        <item name="replaceWithPersianDigits">true</item>
        <item name="fontAdapterType">regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextViewLargeNoMarginWhite" parent="TextViewMediumNoMarginWhite">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <style name="EditTextMediumNoMarginWhiteRegular">
        <item name="hideBottomLine">true</item>
        <item name="android:textDirection">ltr</item>
        <item name="replaceWithPersianDigits">true</item>
        <item name="fontAdapterType">regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edittext_white</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="EditTextMediumNoMarginWhiteBold" parent="EditTextMediumNoMarginWhiteRegular">
        <item name="fontAdapterType">bold</item>
    </style>

    <style name="PhoneNumberEditTextMediumBold" parent="EditTextMediumNoMarginWhiteBold">
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">11</item>
        <item name="android:digits">0123456789</item>
        <item name="android:hint">@string/pidget_hint_edittext_phonenumber</item>
    </style>

    <style name="PhoneNumberEditTextLargeBold" parent="PhoneNumberEditTextMediumBold">
        <item name="android:textSize">@dimen/text_large</item>
    </style>



</resources>