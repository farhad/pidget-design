<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewVerySmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_very_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="TextViewSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextViewMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextViewLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>



    <style name="ButtonSmallAccent" parent="TextViewSmall">
        <item name="android:background">@drawable/bg_btn_accent</item>
    </style>

    <style name="EditTextMedium" parent="TextViewSmall">
        <item name="android:textDirection">ltr</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColorHint">@color/colorTextSecondary</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonMediumNoMarginPrimaryDark" parent="TextViewMedium">
        <item name="useParsiDigits">true</item>
        <item name="android:drawablePadding">@dimen/padding_medium</item>
        <item name="android:background">@drawable/bg_btn_primarydark</item>
    </style>

    <style name="ButtonMediumNoMarginAccent" parent="ButtonMediumNoMarginPrimaryDark">
        <item name="android:background">@drawable/bg_btn_accent</item>
    </style>

    <style name="TextViewMediumNoMarginWhite">
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="TextViewLargeNoMarginWhite" parent="TextViewMediumNoMarginWhite">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <style name="EditTextMediumNoMarginWhiteRegular" parent="TextViewMedium">
        <item name="hideBottomLine">true</item>
        <item name="android:textDirection">ltr</item>
        <item name="android:background">@drawable/bg_edittext_white</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="EditTextMediumNoMarginWhiteBold" parent="EditTextMediumNoMarginWhiteRegular">
        <item name="fontAdapterType">bold</item>
    </style>

    <style name="PhoneNumberEditTextMediumBold" parent="EditTextMediumNoMarginWhiteBold">
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">11</item>
        <item name="android:digits">0123456789</item>
        <item name="android:hint">@string/pidget_hint_edittext_phonenumber</item>
    </style>

    <style name="PhoneNumberEditTextLargeBold" parent="PhoneNumberEditTextMediumBold">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

</resources>